{
  "name": "abandoned-upstate",
  "version": "0.1.0",
  "description": "Abandoned Upstate - Digital archive for abandoned locations in Upstate New York",
  "main": "dist-electron/main/index.js",
  "author": "Abandoned Upstate",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test && npm run test:e2e",
    "package": "electron-builder --mac --linux",
    "package:mac": "electron-builder --mac",
    "package:linux": "electron-builder --linux"
  },
  "dependencies": {
    "better-sqlite3": "^9.2.0",
    "electron-log": "^5.0.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "fs-extra": "^11.2.0",
    "marked": "^17.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "autoprefixer": "^10.4.16",
    "electron": "^33.0.0",
    "electron-builder": "^24.9.1",
    "electron-icon-builder": "^2.0.1",
    "electron-vite": "^2.0.0",
    "leaflet": "^1.9.4",
    "playwright": "^1.40.1",
    "postcss": "^8.4.32",
    "supercluster": "^8.0.1",
    "svelte": "^4.2.8",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "build": {
    "appId": "com.abandonedupstate.app",
    "productName": "Abandoned Upstate",
    "directories": {
      "output": "dist-builder"
    },
    "files": [
      "dist-electron/**/*",
      "resources/**/*"
    ],
    "mac": {
      "category": "public.app-category.lifestyle",
      "icon": "resources/icons/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "icon": "resources/icons/512x512.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Graphics"
    },
    "win": {
      "icon": "resources/icons/icon.ico"
    },
    "publish": {
      "provider": "github",
      "owner": "bizzlechizzle",
      "repo": "aupat"
    }
  }
}
