# AUPAT Docker Environment Configuration
# Copy this file to .env and customize for your environment

# AUPAT Core Configuration
FLASK_ENV=production
DB_PATH=/data/aupat.db

# Immich Configuration
IMMICH_VERSION=release
UPLOAD_LOCATION=/data/immich/upload
DB_HOSTNAME=immich-postgres
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE_NAME=immich
REDIS_HOSTNAME=immich-redis

# ArchiveBox Configuration
ARCHIVEBOX_ALLOWED_HOSTS=*
ARCHIVEBOX_MEDIA_MAX_SIZE=750m
ARCHIVEBOX_TIMEOUT=60

# Service URLs (for AUPAT Core)
IMMICH_URL=http://immich-server:3001
ARCHIVEBOX_URL=http://archivebox:8000

# Ports (customize if conflicts with host)
AUPAT_PORT=5000
IMMICH_PORT=2283
ARCHIVEBOX_PORT=8001

# GPU Support (for Immich ML)
# Uncomment if you have NVIDIA GPU
# NVIDIA_VISIBLE_DEVICES=all
# NVIDIA_DRIVER_CAPABILITIES=compute,utility
